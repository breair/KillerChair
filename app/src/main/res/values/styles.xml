<resources>
    <!-- Base application theme. -->
    <style name="AppLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="background">@color/background</item>

        <item name="round_button_ripple">@drawable/round_button</item>
        <item name="back_button_src">@drawable/ic_arrow_back_24</item>
        <item name="settings_button_src">@drawable/ic_settings_28</item>
        <item name="start_button_src">@drawable/ic_start_arrow_24</item>
        <item name="reset_button_src">@drawable/ic_reset_arrow_24</item>
        <item name="stop_button_src">@drawable/ic_pause_24</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:textColorPrimary">@color/textColorDarkPrimary</item>
        <item name="android:textColorSecondary">@color/textColorDarkSecondary</item>
        <item name="background">@color/backgroundDark</item>

        <item name="round_button_ripple">@drawable/round_button_dark</item>
        <item name="back_button_src">@drawable/ic_arrow_back_24_dark</item>
        <item name="settings_button_src">@drawable/ic_settings_28_dark</item>
        <item name="start_button_src">@drawable/ic_start_arrow_24_dark</item>
        <item name="reset_button_src">@drawable/ic_reset_arrow_24_dark</item>
        <item name="stop_button_src">@drawable/ic_pause_24_dark</item>
    </style>

    <style name="RobotoTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>